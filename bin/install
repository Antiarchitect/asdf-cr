#!/usr/bin/env bash

set -e
set -o pipefail

install_cr() {
  local install_type=$1
  local version=$2
  local install_path=$3
  local platform="$(uname | tr '[:upper:]' '[:lower:]')_amd64"
  local bin_install_path="$install_path/bin"
  local binary_path="$bin_install_path/cr"
  local download_url=$(get_download_url $version $platform)

  if [ "$TMPDIR" = "" ]; then
    local tmp_download_dir=$(mktemp -d -t cr_XXXXXX)
  else
    local tmp_download_dir=$TMPDIR
  fi

  mkdir -p "${bin_install_path}"

  local download_path="$tmp_download_dir/$(get_filename ${platform} ${version})"

  echo "Downloading Chart Releaser from ${download_url} to ${binary_path}"
  curl -Lo $binary_path $download_url

  chmod +x ${binary_path}
}

get_filename() {
    local platform="$1"
    local version="$2"

    echo "chart-releaser_${version}_${platform}.tar.gz"
}

get_download_url() {
  local version="$1"
  local platform="$2"
  local filename="$(get_filename ${platform} ${version})"
  echo "https://github.com/helm/chart-releaser/releases/download/v${version}/${filename}"
}

install_cr $ASDF_INSTALL_TYPE $ASDF_INSTALL_VERSION $ASDF_INSTALL_PATH
